{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "es2020",
        "moduleResolution": "node",
        "outDir": "dist",
        "rootDir": "src",
        "typeRoots": ["./node_modules/@types", "./types"],
        "baseUrl": ".",
        "skipLibCheck": true,
        "resolveJsonModule": true
    },
    "include": ["./src/**/*", "./types/**/*"],
    "exclude": ["node_modules"],
    "lib": ["es2015"]
}
